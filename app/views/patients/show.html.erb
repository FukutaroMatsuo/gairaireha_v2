<% provide(:title, '患者詳細') %>
<div class="row">
  <div class="col s12 m12 l12">
    <div class="card white darken-1">
      <div class="card-content">
        <table class="centered">
          <thead>
            <tr>
              <th style="width: 25%;">実施日</th>
              <th style="width: 25%;">患者名</th>
              <th style="width: 25%;">PT名</th>
              <th style="width: 25%;">単位数</th>
            </tr>
          </thead>
        </table>
      
        <div class="table-body-patient">
          <table class="centered">
            <% @patient.rehas.order(day: "DESC").each do |patient| %>
              <tbody>
                <tr>
                  <td style="width: 25%;"><%= patient.day %></td>
                  <td style="width: 25%;"><%= patient.patient.patient_name %></td>
                  <td style="width: 25%;"><%= patient.user.name %></td>
                  <td style="width: 25%;"><%= patient.unit %></td>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>